{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Admin Run",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-admin",
            "program": "${workspaceFolder}/src/FindBook.UI/FindBook.UI.Admin/bin/Debug/net8.0/FindBook.UI.Admin.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/FindBook.UI/FindBook.UI.Admin",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "App Run",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-ui",
            "program": "${workspaceFolder}/src/FindBook.UI/FindBook.UI.App/bin/Debug/net8.0/FindBook.UI.App.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/FindBook.UI/FindBook.UI.App",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
    ]
}